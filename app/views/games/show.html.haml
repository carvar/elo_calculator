.row
  .large-6.columns
    .gameDetails
      %h3
        = link_for @game.winner
        defeats
        = link_for @game.loser
      %p
        #{@game.winner.name}: #{@game.winner_rating} to #{@game.winner.rating}
      %p
        #{@game.loser.name}: #{@game.loser_rating} to #{@game.loser.rating}
    %br
    - if @game.can_undo?
      = link_to 'Undo Game', @game, method: :delete, class: 'alert button float-right'
  .large-6.columns.show-for-large
    %table{width: '100%'}
      %thead
        %tr
          %th
            Rank
          %th
            Name
          %th
            Rating
          %th
            Won / Lost
      = render top_ten_players
