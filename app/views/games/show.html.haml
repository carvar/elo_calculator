.row
  .large-6.columns
    .gameDetails
      %h3
        #{@game.winner.name} defeats #{@game.loser.name}
      #{@game.winner.name}: #{@game.winner_rating} to #{@game.winner.rating}
      %br
      #{@game.loser.name}: #{@game.loser_rating} to #{@game.loser.rating}
      - if @game.can_undo?
        %br
        .text-center
          = link_to 'Undo Game', @game, method: :delete, class: 'tiny alert button'
    %h3 Add Another Game
    = render 'new_game_form'
  .large-6.columns.show-for-large-up
    %table{width: '100%'}
      %thead
        %tr
          %th
            Rank
          %th
            Name
          %th
            Rating
          %th
            Won / Lost
      = render top_ten_players

