.club-page
  .club-intro
    .row
      .column.small-12
        %h1
          Welcome to
          = ELO_APP_NAME
        %p
          Enter game results to track your improvement over time!
        %p
          Start or join a club to get an ELO rating!
        %p
          Start your own tournaments!
    .row
      .column.small-12
        %br
    .row
      .column.small-12
        = link_to 'Start a Club', new_club_path, class: 'start-club text-center'
  .row
    - @clubs.each do |club|
      .column.small-12.medium-4.large-4.left
        = link_to club, class: 'grid text-center' do
          %p.club-name
            = club.name
          %p.member-count
            Members:
            = club.players.count
    .column.small-12.medium-4.large-4
      = link_to players_path , class: 'grid text-center' do
        %p.club-name
          All Players
        %p.member-count
          Members:
          = @player_count

